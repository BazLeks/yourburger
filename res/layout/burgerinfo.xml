<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="317dp"
        android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/restaurant_name"
	        android:layout_width="161dp"
	        android:layout_height="48dp"
	        android:layout_x="25dp"
	        android:layout_y="22dp"
	        android:text="Имя бургера"
	        android:textSize="20sp" />
    	    
    <View
         android:layout_width="fill_parent"
         android:layout_height="0.2dp"
         android:id="@+id/separator1"
         android:visibility="visible"
                android:background="@android:color/darker_gray"/>

    </LinearLayout>

    <RatingBar
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="41dp"
        android:layout_y="94dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="259dp"
        android:layout_height="103dp"
        android:layout_x="26dp"
        android:layout_y="165dp"
        android:scrollbars="vertical"
        android:text="Описание бургера" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="259dp"
        android:layout_height="88dp"
        android:layout_x="25dp"
        android:layout_y="299dp"
        android:scrollbars="vertical"
        android:text="Комментарии" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="407dp"
        android:text="Найти бургер" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="148dp"
        android:layout_y="408dp"
        android:text="В главное меню" />

</AbsoluteLayout>
