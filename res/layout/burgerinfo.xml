<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:gravity="center_horizontal">
	    
    <ImageView
       android:id="@+id/burger_icon"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_margin="3dp"
       android:maxHeight="40dp"
       android:maxWidth="40dp"
       android:src="@drawable/ic_launcher" />
    
    <TextView
        android:id="@+id/burger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/burger_icon"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/burger_icon"
        android:hint="Ololo"
        android:text=""
        android:textSize="35sp" />
    
    <RatingBar
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/burger_icon"
        android:layout_below="@+id/burger_icon"
        android:layout_marginTop="14dp" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stars"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="15dp"
        android:text="Описание:"
        android:textSize="25sp" />
	
	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="259dp"
	    android:layout_height="103dp"
	    android:layout_above="@+id/button1"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/textView1"
	    android:scrollbars="vertical"
	    android:text="Описание бургера" />

	<Button
	    android:id="@+id/button1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/button2"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:text="Ресторан" />
	
	<Button
	    android:id="@+id/button2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/button1"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:text="В главное меню" />

</RelativeLayout>
