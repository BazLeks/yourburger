<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/restaurant_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@drawable/ic_launcher" />
    
    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_icon"
        android:layout_toRightOf="@+id/restaurant_icon"
        android:hint="40dp"
        android:text=""
        android:textSize="35sp" />

    <Space
        android:layout_width="@+id/restaurant_stars"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant_name"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="55dp" />

    <RatingBar
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_icon"
        android:layout_centerHorizontal="true"
        android:max="5"
        android:numStars="5"
        android:stepSize="1" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/stars"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="15dp"
        android:text="Описание:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/restaurant_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:text="Нет описания."
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/restaurant_showinmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restaurant_mainmenu"
        android:layout_alignParentLeft="true"
        android:text="Показать на карте"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/restaurant_mainmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:drawable/btn_default_small"
        android:text="В главное меню" />

</RelativeLayout>